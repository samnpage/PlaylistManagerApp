@model PlaylistManagerApp.Models.Playlist.PlaylistDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<div>
    <h2>Playlist Details</h2>
    <a asp-controller="Search" asp-action="Index" class="btn btn-link">Add Song</a>
    <a asp-controller="Playlist" asp-action="Edit" asp-route-id="@Model.PlaylistId" class="btn btn-link align-self-center">
        Edit Playlist
    </a>
    <a asp-controller="Playlist" asp-action="Delete" asp-route-id="@Model.PlaylistId" class="btn btn-link align-self-center">
        Delete Playlist
    </a>
</div>

<hr>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <hr>
    <dd class="col-sm-10">
    @if (Model.Song != null && Model.Song.Any())
    {
        foreach (var song in Model.Song)
        {
            <div class="row">
                <div class="col-md-8">
                    <p>@song.Title by @song.Artist</p>
                </div>
                <div class="col-md-4">
                    <a asp-action="RemoveSong" asp-route-id="@song.PlaylistSongId" class="btn btn-danger" type="submit">Remove</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>There are no songs found for the playlist. Click <a asp-controller="Search" asp-action="Index">here</a> if you would like to add a song.</p>
    }
</dd>

</dl>

<div>
    <a asp-action="Index">Back to Playlists</a>
</div>